<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Agent Dashboard</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
      /* General Styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f7f9;
        color: #333;
      }

      /* Header */
      header {
        background-color: #2c3e50;
        color: white;
        padding: 20px;
        text-align: center;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header h1 {
        margin: 0;
        font-size: 22px;
      }

      header a {
        text-decoration: none;
        color: white;
        background-color: #e74c3c;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 14px;
        transition: background 0.3s;
      }

      header a:hover {
        background-color: #c0392b;
      }

      /* Ticket Container */
      .ticket-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
      }

      .ticket-column {
        flex: 1;
        min-width: 300px;
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .ticket-column h3 {
        background-color: #2c3e50;
        color: white;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 18px;
      }

      .ticket-card {
        background: white;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: left;
      }

      .ticket-card h4 {
        margin: 0;
        font-size: 16px;
        color: #333;
      }

      .ticket-card p {
        font-size: 14px;
        color: #666;
        margin: 5px 0;
      }

      .btn-edit {
        display: block;
        width: fit-content;
        padding: 10px 15px;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        text-align: center;
        transition: background 0.3s, transform 0.2s;
        margin-top: 10px;
      }

      .btn-edit:hover {
        background-color: #2980b9;
        transform: scale(1.05);
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 15px;
        background-color: #2c3e50;
        color: white;
        margin-top: 20px;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Support Agent Dashboard</h1>
      <a href="/logout">Logout</a>
    </header>

    <main>
      <section>
        <h2>Assigned Tickets</h2>
        <div class="ticket-container">
          <% Object.keys(groupedTickets).forEach(status => { %>
          <div class="ticket-column">
            <h3><%= status.toUpperCase() %></h3>
            <% groupedTickets[status].forEach(ticket => { %>
            <div class="ticket-card">
              <h4><%= ticket.title %></h4>
              <p><%= ticket.description %></p>
              <a href="/support_agent/tickets/<%= ticket.id %>" class="btn-edit"
                >View & Change Status</a
              >
            </div>
            <% }) %>
          </div>
          <% }) %>
        </div>
      </section>
    </main>

    <footer>
      <p>&copy; 2025 Support Dashboard</p>
    </footer>
  </body>
</html>
